@model MvcExampleApp.Models.Talaba

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
  <h2 class="mb-4">Talaba Formasi</h2>
  <form asp-action="Saqlash" method="post" class="needs-validation">
    <div class="mb-3">
      <label asp-for="Ism" class="form-label"></label>
      <input asp-for="Ism" class="form-control" />
      <span asp-validation-for="Ism" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Familya" class="form-label"></label>
      <input asp-for="Familya" class="form-control" />
      <span asp-validation-for="Familya" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Email" class="form-label"></label>
      <input asp-for="Email" class="form-control" />
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Yosh" class="form-label"></label>
      <input asp-for="Yosh" class="form-control" />
      <span asp-validation-for="Yosh" class="text-danger"></span>
    </div>

    <div class="mb-3">
      <label asp-for="TugilganSana" class="form-label"></label>
      <input asp-for="TugilganSana" class="form-control" type="date" />
      <span asp-validation-for="TugilganSana" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Jo‘natish</button>
  </form>
</div>

<!-- CSS ANIMATSIYA -->
<style>
  .fade-in {
    opacity: 0;
    animation: fadeIn 1.5s forwards;
  }

  @@keyframes
  fadeIn {
    to {
      opacity: 1;
    }
  }
</style>

<div class="container mt-5 fade-in">
  <h2 class="mb-3">Animatsiyali Forma</h2>
  <form asp-action="Saqlash" method="post">
    <div class="mb-3">
      <label class="form-label">Ism</label>
      <input type="text" name="Ism" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Jo'natish</button>
  </form>
</div>

<!-- JavaScript Animatsiya -->
@section Scripts {
  <partial name="_ValidationScriptsPartial" />
  <script>
    window.onload = function () {
      const h2 = document.querySelector("h2");
      h2.style.transition = "transform 15s ease";
      h2.style.transform = "scale(1.1)";
    };
  </script>

  <!-- Bootstrap JS kerak bo‘lsa -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

