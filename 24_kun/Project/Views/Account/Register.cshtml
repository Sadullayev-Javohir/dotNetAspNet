@model Project.Models.RegisterViewModel

<h2>Ro'yxatdan o'tish</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Ism:</label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName" style="color:red"></span>
    </div>

    <div>
        <label>Email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div>
        <label>Yosh:</label>
        <input asp-for="Age" type="number" />
        <span asp-validation-for="Age" style="color:red"></span>
    </div>

    <div>
        <label>Telefon:</label>
        <input asp-for="Phone" />
        <span asp-validation-for="Phone" style="color:red"></span>
    </div>

    <div>
        <label>Parol:</label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>

    <div>
        <label>Parol tasdiqlash:</label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" style="color:red"></span>
    </div>

    <button type="submit">Yuborish</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
