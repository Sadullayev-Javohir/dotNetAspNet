@model List<MeningLoyiham.Models.Product>

<h2>Product List</h2>
<a href="/Product/Create">+ Yangi mahsulot</a>

<table>
  <tr>
    <th>Id</th><th>Name</th><th>Price</th><th>Actions</th>
  </tr>
  @foreach(var item in Model)
  {
    <tr>
      <td>@item.Id</td>
      <td>@item.Name</td>
      <td>@item.Price</td>
      <td>
        <a href="/Product/Details/@item.Id">Details</a> |
        <a href="/Product/Edit/@item.Id">Edit</a> |
        <a href="/Product/Delete/@item.Id">Delete</a>
      </td>
    </tr>
  }
</table>
